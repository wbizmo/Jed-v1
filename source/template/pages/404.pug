extends ../layouts/primary.pug

block variables

	-var page = '404'

	-var type = 'inner'

	-var dest = 'pages'

block header

	include ../blocks/_aside-dropdown/_aside-dropdown

	// header start
	
	header.header.header--inner
		.container-fluid
			.row.no-gutters.justify-content-between

				.col-auto.d-flex.align-items-center
					.dropdown-trigger.dropdown-trigger--inner.d-none.d-sm-block
						.dropdown-trigger__item

					.header-logo
						a.header-logo__link(href="index.html")
							img.header-logo__img(src="img/logo_dark.png", alt="logo")

				.col-auto
					include ../blocks/_main-menu/_main-menu

				.col-auto.d-flex.align-items-center

					// lang select start
					ul.lang-select.lang-select--inner
						li.lang-select__item.lang-select__item--active
							span En
							ul.lang-select__sub-list
								li
									a(href="#") French
								li
									a(href="#") Spanish
								li
									a(href="#") Deutsch
								li
									a(href="#") Russian
					// lang select end				

					a.button.button--squared(href="#") 
						span Donate

					.dropdown-trigger.dropdown-trigger--inner.d-block.d-sm-none
						.dropdown-trigger__item

	// header end

block main

	img.img--bg(src="img/404.jpg", alt="img")

	section.section.error
		.container
			.row

				.col-lg-8.col-xl-6

					.align-container
						.align-container__item
							h1.error__title 404
							h3.error__subtitle Page not found
							p.error__text Gray eel-catfish longnose whiptail catfish smalleye squaretail longnose whiptail catfish smalleye squaretail Lorem, ipsum dolor.
							a.button.button--primary(href="index.html") Home Page