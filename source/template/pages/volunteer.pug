extends ../layouts/primary.pug

block variables

	-var page = 'volunteer'

	-var type = 'inner'

	-var dest = 'pages'

block header

	include ../blocks/_aside-dropdown/_aside-dropdown

	// header start
	
	header.header.header--inner
		.container-fluid
			.row.no-gutters.justify-content-between

				.col-auto.d-flex.align-items-center
					.dropdown-trigger.dropdown-trigger--inner.d-none.d-sm-block
						.dropdown-trigger__item

					.header-logo
						a.header-logo__link(href="index.html")
							img.header-logo__img(src="img/logo_dark.png", alt="logo")

				.col-auto
					include ../blocks/_main-menu/_main-menu

				.col-auto.d-flex.align-items-center

					// lang select start
					ul.lang-select.lang-select--inner
						li.lang-select__item.lang-select__item--active
							span En
							ul.lang-select__sub-list
								li
									a(href="#") French
								li
									a(href="#") Spanish
								li
									a(href="#") Deutsch
								li
									a(href="#") Russian
					// lang select end				

					a.button.button--squared(href="#") 
						span Donate

					.dropdown-trigger.dropdown-trigger--inner.d-block.d-sm-none
						.dropdown-trigger__item

	// header end

block main

	section.promo-primary(class=(dest === "elements" ? "promo-primary--elements" : undefined))

		picture
			source(srcset='img/volunteer.jpg', media='(min-width: 992px)')
			img.img--bg(src='img/volunteer.jpg', alt='img')

		.promo-primary__description 
			span Compassion

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Helpo
							h1.promo-primary__title #[span Become] #[span a Volunteer]

	// section start

	section.section
		.container
			.row.align-items-center

				.col-lg-6.col-xl-5

					.img-box
						img.img--layout(src="img/about_layout-reverse.png", alt="img")
						.img-box__img
							img.img--bg(src="img/img_box-1.jpg", alt="img")

				.col-lg-6.col-xl-6.offset-xl-1

					.heading.heading--primary
						span.heading__pre-title What we Do
						h2.heading__title #[span We Need] #[span Your Help]
					p Burma danio black bass straptail southern Dolly Varden orbicular velvetfish trumpetfish; bluntnose minnow. Hatchetfish pricklefish sixgill ray sawfish scaly dragonfish! Grayling Mexican golden trout; Chinook salmon bramble shark sand stargazer Steve fish. Scat zebra pleco graveldiver river shark tripod fish; flagtail bala shark warbonnet.
					p Sharksucker sea toad candiru rocket danio tilefish stingray deepwater stingray Sacramento splittail, Canthigaster rostrata. Midshipman dartfish Modoc sucker, yellowtail kingfish basslet. Buri chimaera triplespine northern sea robin zingel lancetfish galjoen fish, catla wolffish, mosshead warbonnet.
					p Sea chub demoiselle whalefish zebra lionfish mud cat pelican eel. Minnow snoek icefish velvet-belly shark, California halibut round stingray northern sea robin. Southern grayling trout-perch

	// section end

	// section start

	section.section.forms-section.no-padding-top.no-padding-bottom
		.container
			.row.margin-bottom

				.col-lg-6

					.heading.heading--primary
						span.heading__pre-title Fill Form and Beacame Volonteer
						h2.heading__title #[span Complete] #[span the Form]

				.col-lg-6

					p Sea chub demoiselle whalefish zebra lionfish mud cat pelican eel. Minnow snoek icefish velvet-belly shark, California halibut round stingray northern sea robin. Southern grayling trout-perch		

			.row

				.col-12

					include ../blocks/_user-form/_user-form

		img.forms-section__bg(src="img/volunteer-2.png", alt="img")

	// section end

block footer

	include ../blocks/_footer/_footer